<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="24dp"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:id="@+id/edit_elements_container"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/cancel_edit_content"
        android:background="@drawable/edit_dialog_action_btn_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/ic_baseline_arrow_back_black_24"
        android:layout_width="36dp"
        android:layout_height="36dp"/>

    <TextView
        android:id="@+id/edit_element_title"
        android:text="@string/edit"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/xwwk"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:gravity="center_vertical"
        app:layout_constraintStart_toEndOf="@id/cancel_edit_content"
        app:layout_constraintBottom_toBottomOf="@id/cancel_edit_content"
        android:layout_width="wrap_content"
        android:layout_height="36dp"/>

    <ImageButton
        android:id="@+id/done_edit_content"
        android:background="@drawable/edit_dialog_action_btn_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/ic_baseline_check_black_24"
        android:layout_width="36dp"
        android:layout_height="36dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/element_list"
        android:layout_marginTop="50dp"
        android:paddingBottom="200dp"
        android:clipToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cancel_edit_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</androidx.constraintlayout.widget.ConstraintLayout>