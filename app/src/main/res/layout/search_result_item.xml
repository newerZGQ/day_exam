<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    style="@style/SelectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/course_title"
        android:fontFamily="@font/xwwk"
        android:textSize="15sp"
        android:textColor="#E6ADADAD"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/book_title"
        android:fontFamily="@font/xwwk"
        android:textSize="15sp"
        android:textColor="#E6ADADAD"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/course_title"
        app:layout_constraintBottom_toBottomOf="@id/course_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/paper_title"
        android:fontFamily="@font/xwwk"
        android:textColor="#ffffff"
        android:layout_marginTop="4dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/course_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/question_type"
        android:fontFamily="@font/xwwk"
        android:textColor="#ffffff"
        android:layout_marginStart="8dp"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/paper_title"
        app:layout_constraintBottom_toBottomOf="@id/paper_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/element_type"
        android:fontFamily="@font/xwwk"
        android:textColor="#ffffff"
        android:layout_marginStart="8dp"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/question_type"
        app:layout_constraintBottom_toBottomOf="@id/paper_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/element_content"
        android:fontFamily="@font/xwwk"
        android:layout_marginTop="4dp"
        android:textColor="#D8D8D8"
        android:textSize="14sp"
        android:maxLines="3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/paper_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>