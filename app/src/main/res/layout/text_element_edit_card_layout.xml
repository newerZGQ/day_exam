<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:id="@+id/content_container"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/edit_element_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text_element_content"
            android:minHeight="60dp"
            android:textSize="16sp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:gravity="center_vertical"
            android:fontFamily="@font/xwwk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/text_element_edit"
            android:minHeight="60dp"
            android:textSize="16sp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:gravity="center_vertical"
            android:fontFamily="@font/xwwk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </FrameLayout>


    <LinearLayout
        android:id="@+id/action_container"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/content_container"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp" >
        <ImageButton
            android:id="@+id/edit_element_btn"
            android:src="@drawable/ic_outline_edit_white_24"
            android:background="@color/colorTransparent"
            android:layout_width="36dp"
            android:layout_height="36dp" />
        <ImageButton
            android:id="@+id/reset_element_btn"
            android:src="@drawable/ic_baseline_restart_alt_24"
            android:background="@color/colorTransparent"
            android:layout_width="36dp"
            android:layout_height="36dp" />

        <ImageButton
            android:id="@+id/delete_element_btn"
            android:src="@drawable/ic_twotone_delete_white_24"
            android:background="@color/colorTransparent"
            android:layout_width="36dp"
            android:layout_height="36dp" />
        <TextView
            android:id="@+id/insert_tag"
            android:layout_marginStart="36dp"
            android:text="下方插入"
            android:fontFamily="@font/xwwk"
            android:textColor="@color/font_common_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:id="@+id/add_text_element_btn"
            android:src="@drawable/ic_baseline_text_fields_24"
            android:background="@color/colorTransparent"
            android:layout_width="36dp"
            android:layout_height="36dp" />
        <ImageButton
            android:id="@+id/add_image_element_btn"
            android:src="@drawable/ic_baseline_image_24"
            android:background="@color/colorTransparent"
            android:layout_width="36dp"
            android:layout_height="36dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sub_action_container"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/content_container"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp" >
        <ImageButton
            android:id="@+id/done_edit_element_btn"
            android:src="@drawable/ic_baseline_check_24"
            android:background="@color/colorTransparent"
            android:layout_width="36dp"
            android:layout_height="36dp" />
        <ImageButton
            android:id="@+id/cancel_element_edit"
            android:src="@drawable/ic_baseline_clear_24"
            android:background="@color/colorTransparent"
            android:layout_width="36dp"
            android:layout_height="36dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>